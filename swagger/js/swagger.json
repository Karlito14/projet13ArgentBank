{
  "openapi": "3.1.0",
  "info": {
    "description": "<p>Contains all available API endpoints in this codebase</p>",
    "version": "1.0.0",
    "title": "Bank Argent API documentation",
    "contact": {
      "name": "Api Support",
      "email": "leiroz26@hotmail.com"
    },
    "termsOfService": "http://swagger.io/terms/"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api/v1/user"
    }
  ],
  "tags": [
    {
      "name": "Transactions",
      "description": "Everything to do with banking transactions"
    }
  ],
  "security": [
    {
      "Bearer": []
    }
  ],
  "paths": {
    "/transactions": {
      "get": {
        "tags": ["Transactions"],
        "summary": "Retrieves the user's transactions for the current month",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization ",
            "type": "string",
            "required": true,
            "description": "Attach Bearer JWT token"
          }
        ],
        "operationId": "getTransactions",
        "responses": {
          "200": {
            "description": "Returns a list of transactions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfTransactions"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/InvalidFiels"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/transaction/{transactionId}": {
      "get": {
        "tags": ["Transactions"],
        "summary": "Retrieve a user's transaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "type": "string",
            "required": true,
            "description": "Attach Bearer JWT token"
          },
          {
            "in": "path",
            "name": "TransactionId",
            "type": "string",
            "required": true,
            "description": "Transaction ID"
          }
        ],
        "operationId": "getTransaction",
        "responses": {
          "200": {
            "description": "Returns a transaction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transactions"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/InvalidFiels"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "patch": {
        "tags": ["Transactions"],
        "summary": "Modify a transaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "type": "string",
            "required": true,
            "description": "Attach Bearer JWT token"
          },
          {
            "in": "path",
            "name": "TransactionId",
            "type": "string",
            "required": true,
            "description": "Transaction ID"
          }
        ],
        "requestBody": {
          "description": "Modify Transaction informations",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "notes": {
                        "types": "string"
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "category": {
                        "types": "string"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "operationId": "modifyTransaction",
        "responses": {
          "200": {
            "description": "Returns a transaction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transactions"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/InvalidFiels"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transactions": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "date": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "category": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "transaction type": {
            "type": "string"
          }
        },
        "example": {
          "id": 1,
          "date": "2024/05/28",
          "description": "Golden Sun Bakery",
          "amount": 5,
          "category": "Food",
          "notes": "",
          "transaction type": "electronic"
        }
      },
      "ArrayOfTransactions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Transactions"
        },
        "example": [
          {
            "id": 1,
            "date": "2024/05/28",
            "description": "Golden Sun Bakery",
            "amount": 5,
            "category": "Food",
            "notes": "",
            "transaction type": "electronic"
          },
          {
            "id": 2,
            "date": "2024/05/29",
            "description": "Golden Sun Bakery",
            "amount": 10,
            "category": "Food",
            "notes": "",
            "transaction type": "electronic"
          }
        ]
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Access token is missing or invalid"
      },
      "ServerError": {
        "description": "Internal Server Error"
      },
      "InvalidFiels": {
        "description": "Invalid Fields"
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
